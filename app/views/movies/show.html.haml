%header
  .container
    .row
      .col-lg-4.col-md-5.col-xs-11
        %a{:href => "/"} Moovelo

      .col-lg-8.col-md-7.col-xs-1
        %form
          .form-group.row
            .col-10
              %input#example-search-input.form-control{:type => "search", :value => "Search for a movie"}/


%main
  .container.movie
    %h1
      = @movie.title
    .inner-content
      .img-wrapper.col-lg-3.col-md-4.col-xs-10
        = image_tag("/posters/#{@movie.poster_path}")

      .movie-info.col-lg-9.col-md-8.col-xs-2
        %p.summary-text
          = @movie.overview
          %ul
            %li
              Release date:
              = @movie.release_date
            %li
              Tagline:
              %em
                = @movie.tagline
            %li
              Vote average:
              = @movie.vote_average
            %li
              Vote count:
              = @movie.vote_count
        .row.lead
          %h3
            Give your rating
          #hearts.starrr

    %h2
      Let us know how did you like the movie
    %form
      .form-group
      %label{:for => "name"} Name
      %input#name.form-control{:placeholder => "Enter name", :type => "text"}/
      .form-group
        %label{:for => "comment"} Comment
        %textarea#exampleTextarea.form-control{:rows => "3"}
      %button.btn.btn-primary{:type => "submit"} Submit


    -#= @movie.as_json


    = link_to "< Back to Index", root_path